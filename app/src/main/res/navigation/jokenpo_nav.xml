<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/jokenpo_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.omelhordobrasil.kotlinbr.tamojunto.lucao.jokenpoapp.HomeFragment"
        android:label="Jokenpo"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_game_nav"
            app:destination="@id/navigation"
            app:popUpTo="@id/jokenpo_nav" />
    </fragment>

    <navigation android:id="@+id/navigation"
        app:startDestination="@id/playerFragment">
        <fragment
            android:id="@+id/playerFragment"
            android:name="com.omelhordobrasil.kotlinbr.tamojunto.lucao.jokenpoapp.PlayerFragment"
            android:label="Player"
            tools:layout="@layout/fragment_player" />
        <fragment
            android:id="@+id/resultFragment"
            android:name="com.omelhordobrasil.kotlinbr.tamojunto.lucao.jokenpoapp.ResultFragment"
            android:label="Result"
            tools:layout="@layout/fragment_result" />
    </navigation>
</navigation>